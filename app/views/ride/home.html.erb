
<body class="">
  <nav>
    <div class="col-xs-2">
      <!-- placeholder -->
    </div>
    <h2 class="uber-title centerText col-xs-8 syncopate">UBER SHARE</h2>
    <div class="uber-logo"></div>
   <div class="col-xs-2">

      <div class="col-xs-2"></div>

      <div class="col-xs-5 nav-button-field">
      	<p class="clickable oxygen">About</p>
      </div>

      <div class="col-xs-offset-1 col-xs-3 nav-button-field">
      	<p class="clickable oxygen">Logs</p>
      </div>

    </div>
  </nav>

  <section class="page-container section-padding">
    <div class="col-xs-2"></div>
    <div class="subhead centerText col-xs-8 quicksand">
      <h1>SHARE A RIDE WITH ME</h4>
      <p class="small-header-padding">
      	Enter your information for an Uber carpool and hit enter.
      </p>


    
    <%= form_tag("/new_ride", method: "post", class: "input-field") do %>
      	<div class="input-padding">
      		<div class="input-border">
 	     		<input id="phone_number" name="phone_number" class="input-text centerText" type="text"  placeholder="Phone Number"><br>
 	     	</div>
 	    </div>
 	    <div class="input-padding">
      		<div class="input-border">
 	     		<input id="start_location" name="start_location" class="input-text centerText" type="text" placeholder="Current Location"><br>
 	     	</div>
 	    </div>

 	    <div class="input-padding">
      		<div class="input-border">
 	     		<input id="end_location" name="end_location" class="input-text centerText" type="text" placeholder="Destination"><br>
 	     	</div>
 	    </div>
 	    <%= submit_tag %>
 	<% end %>
    <div class="col-xs-2"></div>
  </section>
</body>
